<config xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
		xmlns='http://www.ehcache.org/v3'
		xsi:schemaLocation="http://www.ehcache.org/v3 https://www.ehcache.org/schema/ehcache-core.xsd">

	<cache alias="customizationResources">
		<key-type>java.lang.String</key-type>
		<value-type>org.rudi.common.core.DocumentContent</value-type>
		<expiry>
			<ttl unit="hours">1</ttl>
		</expiry>
		<resources>
			<heap unit="entries">50</heap>
		</resources>
	</cache>
	<cache alias="customizationData">
		<key-type>java.lang.String</key-type>
		<value-type>org.rudi.microservice.konsult.core.customization.CustomizationDescriptionData</value-type>
		<expiry>
<!--			<ttl unit="hours">6</ttl>-->
			<ttl unit="minutes">5</ttl>
		</expiry>
		<resources>
			<heap unit="entries">50</heap>
		</resources>
	</cache>

</config>